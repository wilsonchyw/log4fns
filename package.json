{
    "name": "log4fns",
    "version": "1.0.4",
    "description": "This package aims to log the message with caller function's name and location",
    "author": "wilsonchyw",
    "license": "ISC",
    "type": "commonjs",
    "keywords": [
        "npm",
        "package",
        "wilsonchyw",
        "log",
        "file name",
        "function name",
        "file path"
    ],
    "main": "lib/cjs/index.js",
    "scripts": {
        "start": "npx ts-node src/index.ts",
        "start:test": "node index.js",
        "start:watch": "nodemon ",
        "format": "prettier --write \"src/**/*.ts\"",
        "build": "npm run build:cjs && npm run build:esm",
        "build:cjs": "tsc -p tsconfig.cjs.json",
        "build:esm": "tsc -p tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
        "lint": "tslint -p tsconfig.json",
        "test": "jest --coverage --verbose",
        "prepare": "npm run build",
        "prepublishOnly": "npm run test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./lib/esm/types/index.d.ts",
                "default": "./lib/esm/index.mjs"
            },
            "require": {
                "default": "./lib/cjs/index.js"
            }
        },
        "./package.json": "./package.json"
    },
    "devDependencies": {
        "@types/jest": "^29.2.3",
        "jest": "^29.3.1",
        "prettier": "^2.8.0",
        "ts-jest": "^29.0.3",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.9.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wilsonych/log4fns.git"
    },
    "bugs": {
        "url": "https://github.com/wilsonych/log4fns/issues"
    },
    "homepage": "https://github.com/wilsonych/log4fns#readme",
    "files": [
        "lib/**/*"
    ],
    "types": "lib/cjs/index.d.ts"
}
